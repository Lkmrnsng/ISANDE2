<!-- Import JSON Pop-up Modal -->
<div id="import-modal" class="modal">
    <div class="modal-content">
        <h3>Import Inventory</h3>
        <p>Upload a JSON file to either overwrite or add to the existing inventory.</p>
        <input type="file" accept=".json">
        <div class="modal-actions">
            <button class="cancel-btn">Cancel</button>
            <button class="confirm-btn">Confirm</button>
        </div>
    </div>
</div>

<!-- Edit Quantity Pop-up Modal -->
<div id="edit-modal" class="modal">
    <div class="modal-content">
        <h3>Edit Quantity</h3>
        <label for="new-quantity">New Quantity (kg):</label>
        <input type="number" id="new-quantity" min="0">
        <div class="modal-actions">
            <button class="cancel-btn">Cancel</button>
            <button class="confirm-btn">Confirm</button>
        </div>
    </div>
</div>

