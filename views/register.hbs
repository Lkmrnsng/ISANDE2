    <h2>Register to be a SustainaPartner!</h2>
    <p>Be a part of transforming rejected produce into high-quality, affordable products; for consumers to enjoy!</p>
    <br>
    <div class="main-div">
        <div id="login-form-div">
            <form action="/register/new" method="post" enctype="multipart/form-data">
                <div class="login-info register">
                    <div class="field">
                        <p for="username">Username</p>
                        <input type="text" name="username" id="username" placeholder="Full Name" required>
                    </div>

                    <div class="field">
                        <p for="contact">Phone Number</p>
                        <input type="text" name="contact" id="contact" placeholder="10-digit number" required>
                    </div>

                    <div class="field">
                        <p for="restaurant">Restaurant Name</p>
                        <input type="text" name="restaurant" id="restaurant" placeholder="Optional">
                    </div>

                    <div class="field">
                        <p for="email">Email</p>
                        <input type="email" name="email" id="email" placeholder="email@site.com" required>
                    </div>

                    <div class="field">
                        <p for="password">Password</p>
                        <input type="password" name="password" id="password" placeholder="Password" required>
                    </div>

                </div>
                
                <div class="action-buttons">
                    <p>Already a Partner? <a href="/login"><span style="text-decoration: underline; color: var(--green)">Login</span></a></p>
                    <input type="submit" value="Submit" class="submit">
                </div>
            </form>

            <br>
        </div>

            <img class="register-bg" src="/img/hero-veg.jpg" alt="login-bg">
    </div> 