<div class="main-layout">
  <main class="dashboard-container">
    <div class="partners-section">
      <h2>Logistics Partners</h2>
      <div class="table-controls">
        <div class="filter-sort">
          <div class="dropdown">
            <button class="filter-btn">Filter by</button>
          </div>
          <div class="dropdown">
            <button class="sort-btn">Sort by</button>
          </div>
        </div>
        <div class="search-bar">
          <input type="text" placeholder="Search" />
          <button class="search-icon">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </div>

      <table class="logistics-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Contact No.</th>
            <th>Location</th>
            <th>Price</th>
            <th>Max. Weight</th>
            <th>Per Unit Computation</th>
            <th>Latest Shipment Date</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each agencies}}
          <tr {{#if @first}}class="highlighted"{{/if}}>
            <td>{{name}}</td>
            <td>
              {{#if (isArray contactNo)}}
                {{#each contactNo}}
                  {{this}}<br>
                {{/each}}
              {{else}}
                {{contactNo}}
              {{/if}}
            </td>
            <td>{{location}}</td>
            <td>₱{{price}}</td>
            <td>{{maxWeight}} kg</td>
            <td>{{perUnitComputation}}</td>
            <td>{{latestShipmentDate}}</td>
            <td>
              <button class="more-options">...</button>
              <button class="contact-btn">Contact</button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

      <section class="agency-shipments">
        <h2>Agency Shipments</h2>
        <div class="metrics-grid">
          <div class="metric-card">
            <h3>Shipment For This Week:</h3>
            <p>{{shipmentMetrics.weeklyShipments}}</p>
          </div>
          <div class="metric-card">
            <h3>Total Expected KG:</h3>
            <p>{{shipmentMetrics.totalExpectedKg}} Kg</p>
          </div>
          <div class="metric-card">
            <h3>On-Time Rate:</h3>
            <p>{{shipmentMetrics.onTimeRate}}%</p>
          </div>
          <div class="metric-card">
            <h3>Unbooked Shipments:</h3>
            <p>{{shipmentMetrics.unbookedShipments}}</p>
            <button class="procurement-btn">Procurement</button>
          </div>
          <div class="metric-card">
            <h3>Completed Shipments:</h3>
            <p>{{shipmentMetrics.completedShipments}}</p>
          </div>
          <div class="metric-card">
            <h3>Average Amount Spent:</h3>
            <p>₱{{shipmentMetrics.averageAmountSpent}}</p>
          </div>
        </div>
      </section>
    </div>
  </main>
</div>