<div class="sidebar">
    <h2>Main Menu</h2>
    <ul>
        <li><a href="/my-requests">My Requests</a></li>
        <li><a href="/track-request">Track Request</a></li>
        <li><a href="/chats">Chats</a></li>
        <li><a href="/cancel-request">Cancel Request</a></li>
        <li><a href="/account">Account</a></li>
    </ul>
</div>

<div class="main-content">
    <div class="requests-list">
        <h1>My Requests</h1>
        <div class="search-bar">
            <input type="text" placeholder="Search...">
        </div>
        <table>
            <thead>
                <tr>
                    <th>Request ID</th>
                    <th>Status</th>
                    <th>Date/s</th>
                    <th>Items</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each requests}}
                <tr>
                    <td>{{this.requestID}}</td>
                    <td>{{this.status}}</td>
                    <td>{{this.date}}</td>
                    <td>{{this.items}}</td>
                    <td><a href="/track-request/{{this.requestID}}">Track Request</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <button class="place-request-btn">Place a Request</button>
    </div>

    <div class="request-details">
        <h2>Request Details</h2>
        {{#if selectedRequest}}
        <img src="/images/{{selectedRequest.itemName}}.jpg" alt="{{selectedRequest.itemName}}">
        <h3>{{selectedRequest.itemName}}</h3>
        <p>{{selectedRequest.quantity}} kg</p>
        <p>₱ {{selectedRequest.price}}</p>
        <p>Request Total: ₱ {{selectedRequest.total}}</p>
        <p>Status: {{selectedRequest.status}}</p>
        {{else}}
        <p>Select a request to view details</p>
        {{/if}}
        <button class="give-feedback-btn">Give Feedback</button>
    </div>
</div>