<main>
    <div class="container">
        <!-- Banner Section -->
        <div class="banner-div">
            <div class="left-banner-div">
                <h1>Place a Recurring Request</h1>
                <p>Want to have your food supplies delivered regularly? Place a recurring order request with us and we will see to your restaurant's needs! Look out for us in your chat menu after you place the request.</p>
            </div>

            <div class="right-banner-div">
                <img src="/img/hero-veg.jpg" alt="tasty-produce" width="120px" height="120px">
            </div>
        </div>

        <!-- Catalog Section -->
        <h2 id="featured-products-header">Featured Products</h2>
        <div class="catalog-div">
            {{#each items}}
                <div class="card-container">
                    <div class="card-element" onclick="showOverlay(this)" 
                            data-name="{{this.itemName}}" 
                            data-price="{{this.itemPrice}}"
                            data-description="{{this.itemDescription}}"
                            data-image="{{this.itemImage}}">
                            
                        <img src="{{this.itemImage}}" alt="product-image">
                        <div class="produce-details">
                            <div class="details-top">
                                <h3>{{this.itemName}}</h3>
                                <p>₱{{this.itemPrice}} / kg</p>
                            </div>
                            <div class="actions">
                                <div class="quantity-control">
                                    <i class="fa-regular fa-square-plus"></i>
                                    <p>1 kg</p> {{!-- TODO: Make this reflect --}}
                                    <i class="fa-regular fa-square-minus"></i>
                                </div>
                                <button onclick="addToCart()">Add to Request</button>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>

        <!-- Item Description Overlay -->
        <div id="description-overlay" onclick="closeOverlayOutside(event)">
            <div class="overlay-content">
                <i class="fa-solid fa-xmark" alt="Close" onclick="closeOverlay()"></i>
                <h2>More About: <span id="overlay-name"></span></h2>
                <div class="details-desc-container">
                    <img id="overlay-image" src="" alt="Product Image" >
                    <div class="details-desc">
                        <p id="overlay-price"></p>
                        <button onclick="addToCart()">Add to Request</button>
                        <h3>Product Description:</h3>
                        <p id="overlay-description"></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cart Overlay -->
        <div class="cart-overlay" id="cart-overlay">
            <div class="cart-item">
                <img src="/img/tomato.png" alt="tomato" width="40px" height="40px">
                <h3>Tomato</h3>
                <div class="quantity-control">
                    <img src="plus-icon.png" width="40px" height="40px" onclick="addQty()">
                    <p>2</p>
                    <img src="minus-icon.png" width="40px" height="40px" onclick="lessQty()">
                </div>
                <p>x ₱50 / kg</p>
                <p>₱100</p>
            </div>
            <hr>
            <h3>Request Total:</h3>
            <h3>₱100</h3>
            <button onclick="checkout()">Proceed to Checkout</button>
            <button onclick="closeCartOverlay()">Close</button>
        </div>
    </div>
</main>

<script src="/js/marketplace_catalog.js"></script>